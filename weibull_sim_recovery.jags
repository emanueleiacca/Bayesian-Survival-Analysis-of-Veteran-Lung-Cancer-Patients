
model {
  for (i in 1:N) {
    isCens[i] ~ dinterval(t[i], time[i])  # Censoring indicator
    t[i] ~ dweib(shape, lambda[i])        # Weibull likelihood

    eta[i] <- inprod(beta[], X[i,])       # Linear predictor
    lambda[i] <- exp(-eta[i])             # Scale parameter
  }

  # Priors for regression coefficients
  for (j in 1:K) {
    beta[j] ~ dnorm(0, 1)
  }

  shape ~ dgamma(1, 0.1)
}
